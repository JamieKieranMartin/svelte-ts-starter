{
  "name": "svelte-ts-starter",
  "version": "1.0.0",
  "main": "src/index.ts",
  "scripts": {
    "watch:tailwind": "npx postcss ./public/tailwind.css -o ./public/index.css -w",
    "build:tailwind": "npx NODE_ENV=production postcss ./public/tailwind.css -o ./public/index.css",
    "dev": "npx run-p start:dev autobuild watch:tailwind",
    "build": "npm run build:tailwind && cross-env NODE_ENV=production rollup -c",
    "start": "npx sirv ./public --single",
    "start:dev": "npx sirv ./public --single --dev",
    "autobuild": "npx cross-env NODE_ENV=development rollup -c -w",
    "fix": "npx eslint --fix \"{,!(node_modules|public)/**/}*.{js,svelte}\"",
    "format": "npx prettier --write \"{,!(node_modules|public)/**/}*.{js,svelte}\""
  },
  "dependencies": {
    "svelte": "^3.20.1"
  },
  "devDependencies": {
    "@pyoner/svelte-types": "^3.4.4-2",
    "@rollup/plugin-commonjs": "^11.0.2",
    "@rollup/plugin-node-resolve": "^7.1.1",
    "@rollup/plugin-typescript": "^4.0.0",
    "@types/html-minifier": "^3.5.3",
    "autoprefixer": "^9.8.4",
    "cross-env": "^7.0.2",
    "cssnano": "^4.1.10",
    "eslint": "^7.3.1",
    "eslint-plugin-svelte3": "^2.7.3",
    "node-sass": "^4.13.1",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^7.1.1",
    "prettier": "^2.0.5",
    "prettier-plugin-svelte": "^1.1.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.3.4",
    "rollup-plugin-html2": "^1.1.0",
    "rollup-plugin-livereload": "^1.1.0",
    "rollup-plugin-postcss": "^2.5.0",
    "rollup-plugin-scss": "^2.1.0",
    "rollup-plugin-serve": "^1.0.1",
    "rollup-plugin-svelte": "^5.2.1",
    "rollup-plugin-terser": "^5.3.0",
    "sirv-cli": "^1.0.1",
    "svelte-preprocess": "^3.7.1",
    "tailwindcss": "^1.4.6",
    "tslib": "^1.11.1",
    "typescript": "^3.8.3"
  }
}
